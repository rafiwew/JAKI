<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.JAKI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#1C5DDB</item>
        <item name="colorSurface">#1C5DDB</item>
        <item name="colorSurfaceVariant">#1C5DDB</item>
        <item name="colorAccent">#1C5DDB</item>
        <!--<item name="colorOnPrimaryContainer">#1C5DDB</item>-->
        <item name="colorPrimaryContainer">#1C5DDB</item>
    </style>

    <style name="Theme.JAKI" parent="Base.Theme.JAKI" />

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_rectangle_button_primary</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="ButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:tint">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="strokeColor">#1C5DDB</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
    </style>

    <style name="OutlineRafi" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">#1C5DDB</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
    </style>

    <style name="ChipSuggest" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:fontFamily">@font/plus_jakarta_sans_medium</item>
        <item name="fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="chipStrokeColor">#0466D4</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>